{
  "manifest_version": 3,
  "name": "CC Dictionary",
  "version": "1.0",
  "description": "View definitions of words in video subtitles by hovering over them",
  "permissions": ["storage", "activeTab"],
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {}
  }
}
